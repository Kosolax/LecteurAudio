<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainImageButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="PlayImageButton" parent="MainImageButton">
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="StopImageButton" parent="MainImageButton">
        <item name="android:layout_marginRight">50dp</item>
    </style>

    <style name="PauseImageButton" parent="MainImageButton">
    </style>

    <style name="TextViewAudioModel">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageButtonNotification">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="InvisibleTextView">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="ComplexImageButtonNotification" parent="ImageButtonNotification">
        <item name="android:layout_marginTop">15dp</item>
    </style>

</resources>