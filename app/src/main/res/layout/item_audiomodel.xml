<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/audio_model_name"
        style="@style/TextViewAudioModel"
        app:layout_constraintBottom_toBottomOf="@+id/audio_model_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/audio_model_size" />

    <TextView
        android:id="@+id/audio_model_size"
        style="@style/TextViewAudioModel"
        app:layout_constraintBottom_toBottomOf="@+id/audio_model_time"
        app:layout_constraintStart_toEndOf="@+id/audio_model_name"
        app:layout_constraintTop_toTopOf="@+id/audio_model_time" />

    <TextView
        android:id="@+id/audio_model_time"
        style="@style/TextViewAudioModel"
        app:layout_constraintStart_toEndOf="@+id/audio_model_size"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button"
        style="@style/ImageButtonNotification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/audio_model_time"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:foreground="@mipmap/ic_fav" />

    <TextView
        android:id="@+id/audio_model_uri"
        style="@style/InvisibleTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/audio_model_id" />

    <TextView
        android:id="@+id/audio_model_id"
        style="@style/InvisibleTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>